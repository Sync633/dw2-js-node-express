<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Editar Clientes</h1>
            </div>
            <div class="card-body">
                <!-- Formulário de Edição -->
                <form action="" method="POST">
                    <label>Nome do Cliente</label>
                    <input type="text" name="nome" placeholder="Insira o Nome do cliente" class="form-control" value="<%= cliente.nome %>" required>
                    <label>CPF do Cliente</label>
                    <input type="text" name="cpf" placeholder="Insira o CPF do cliente" class="form-control" value="<%= cliente.cpf %>" required>
                    <label>Endereco do Cliente</label>
                    <input type="text" name="endereco" placeholder="Insira o Endereço do cliente" class="form-control mb-4" value="<%= cliente.endereco %>" required>
                    <input type="submit" class="btn btn-success" value="Alterar">
                    <input type="reset" class="btn btn-danger" value="Limpar">
                </form>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>